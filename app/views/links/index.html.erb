<h1>Listing links</h1>

<table>
  <tr>
    <th>Link</th>
    <th>Description</th>
    <th>Ip</th>
    <th>User agent</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.link %></td>
    <td><%= link.description %></td>
    <td><%= link.ip %></td>
    <td><%= link.user_agent %></td>
    <td><%= link.category %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

